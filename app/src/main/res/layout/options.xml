<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Kosten (ct) / kwh" >
</TextView>

            <EditText
                    android:id="@+id/options_costsperkwh"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal|text"
                    android:text="0,26">

                <requestFocus></requestFocus>
            </EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
        </TableRow>
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout1"
                      android:layout_height="wrap_content" android:orientation="horizontal">
            <Button android:id="@+id/options_buttonok" android:layout_width="wrap_content" android:text="OK"
                    android:layout_height="wrap_content" android:layout_weight="1"></Button>
            <Button android:id="@+id/options_buttoncancel" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Abbrechen" android:layout_weight="1"></Button>
        </LinearLayout>
    </TableLayout>
</LinearLayout>
