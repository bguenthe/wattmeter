<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
            android:id="@+id/devicepicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/icon">

    </ImageView>
    <LinearLayout android:layout_weight="1" android:layout_width="fill_parent" android:orientation="vertical"
                  android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="1"
                android:scrollHorizontally="true"
                android:text="DVD-Spieler" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/usageperdayinours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="1 Stunde/Tag"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/LinearLayout02"
                      android:layout_height="wrap_content" android:layout_width="fill_parent">

            <TextView android:id="@+id/costsperour"
                      android:layout_height="wrap_content" android:text="1 €/Stunde"
                      android:layout_width="wrap_content" android:layout_weight="1"
                    ></TextView>

            <TextView android:layout_height="wrap_content"
                      android:layout_weight="1" android:id="@+id/costsperday"
                      android:text="1 €/Tag" android:layout_width="wrap_content"></TextView>

            <TextView android:layout_height="wrap_content"
                      android:layout_weight="1" android:id="@+id/costsperyear"
                      android:text="1 €/Jahr" android:layout_width="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/watt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:text="23 Watt"
            android:textSize="15pt" android:paddingLeft="2pt">

    </TextView>
</LinearLayout>